<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@drawable/menubackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.01"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/trafficimage1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.01"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/trafficimage2" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.01"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/trafficimage3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/playQuizButton"
                android:layout_width="420dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="0.13"
                android:background="@drawable/border"
                android:onClick="launchActivity2"
                android:text="@string/playQuizButtonHint"
                android:textSize="40dp" />

            <Button
                android:id="@+id/aboutButton"
                android:layout_width="420dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="0.06"
                android:background="@drawable/border"
                android:onClick="launchAboutActivity"
                android:text="@string/aboutButtonHint"
                android:textSize="40dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>